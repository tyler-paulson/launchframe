{
    "name": "whiteboard/launchframe",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Brett Bash",
            "email": "brett@whiteboard.is",
            "homepage": "https://whiteboard.is"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.9",
        "oscarotero/env": "^2.1",
        "rareloop/lumberjack-core": "^4.3",
        "roots/soil": "^4.0",
        "roots/wordpress": "^5.5",
        "roots/wp-config": "^1.0",
        "roots/wp-password-bcrypt": "^1.0",
        "vlucas/phpdotenv": "^4.1.8",
        "wpackagist-plugin/disable-gutenberg": "^2.2",
        "wpackagist-plugin/timber-library": "^1.18"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": [
            "phpcs"
        ]
    }
}
